<h1>A confirmation email has been sent to <%= @reservation.name %>.</h1>
<p>Details for the reservation are below.</p>
<table>
	<thead>
		<tr>
			<th>Date</th>
			<th>Time</th>
			<th>Guests</th>
			<th>Name</th>
			<th>Email</th>
			<th>Phone</th>
			<th>Special Requests</th>
		</tr>
	</thead>
	<tbody>
		<tr>
			<td> <%= @reservation.date.strftime('%A, %m/%d/%Y') %> </td>
			<td> <%= @reservation.time.strftime("%I:%M%p") %> </td>
			<td> <%= @reservation.guests %> </td>
			<td> <%= @reservation.name %> </td>
			<td> <%= @reservation.email %> </td>
			<td> <%= @reservation.phone %> </td>
			<td> <%= @reservation.requests %> </td>
		</tr>
	</tbody>
</table>