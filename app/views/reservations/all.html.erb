					<%= form_tag reservation_path(reservation_all_path), method: :delete do %>
						<%= submit_tag :delete %>
					<%end%>
				</td> -->
				<td><%= link_to 'Destroy', reservation, method: :delete, data: { confirm: 'Are you sure?' } %></td>
				<td>
					
				</td>
				<td></td>
			</tr>
		<% end %>
	</tbody>
</table>