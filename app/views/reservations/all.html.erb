<h1>Here's a list of all the reservations</h1>

<table>
	<thead>
		<tr>
			<th>Date</th>
			<th>Time</th>
			<th>Guests</th>
			<th>Name</th>
			<th>Email</th>
			<th>Phone</th>
			<th>Special Requests</th>
			<th></th>
			<th></th>
			<th></th>
			<th></th>
		</tr>
	</thead>

	<tbody>
		<% @reservations.each do |reservation| %>
			<tr>
				<td> <%= reservation.date.strftime('%A, %m/%d/%Y') %> </td>
				<td> <%= reservation.time.strftime("%I:%M%p") %> </td>
				<td> <%= reservation.guests %> </td>
				<td> <%= reservation.name %> </td>
				<td> <%= reservation.email %> </td>
				<td> <%= reservation.phone %> </td>
				<td> <%= reservation.requests %> </td>
				<td> <%= link_to 'Edit', edit_reservation_path(reservation) %> </td>

				<!-- the following is not needed anymore. fixed the destroy method -->
