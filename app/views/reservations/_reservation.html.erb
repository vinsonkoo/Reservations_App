<div class="container">
<table>
	<thead>
		<tr>
			<th>Date</th>
			<th>Time</th>
			<th>Guests</th>
			<th>Name</th>
			<th>Email</th>
			<th>Phone</th>
			<th>Requests</th>
		</tr>
	</thead>

	<tbody>
		<tr>
			<td> <%= @reservation.date.strftime('%A, %m/%d/%Y') %> </td>
			<td> <%= @reservation.time.strftime("%I:%M%p") %> </td>
			<td> <%= @reservation.guests %> </td>
			<td> <%= @reservation.name %> </td>
			<td> <%= @reservation.email %> </td>
			<td> <%= @reservation.phone %> </td>
			<td> <%= @reservation.requests %> </td>
			<% if user_signed_in? %>
			<td> <%= link_to 'Edit', edit_reservation_path(@reservation), :class => 'btn' %> </td>
			<!-- use form_tag in place of link_to -->
			<td> 
				<%= form_tag reservation_all_path(@reservation), method: :delete do %>
					<%= submit_tag :delete, :class => 'btn' %>
				<%end%>
			</td> 
			<!-- delete method not working with link_to. seems like a javascript problem according to stack overflow -->
			<!-- <td><%= link_to 'Delete', @reservation, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn' %></td> -->
			<td>
				<%= link_to 'Send Confirmation', send_confirmation_path(@reservation), :class => 'btn' %>
			</td>
			<td>
				<%= link_to 'Send Cancellation', send_cancellation_path(@reservation), :class => 'btn' %>
			</td>
			<% else %>
			<td></td>
			<td></td>
			<td></td>
			<td></td>
			<% end %>
		</tr>
	</tbody>
</table>